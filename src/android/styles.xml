<resources>
    <style name="LightFullScreen" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="BlackFullScreen" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="WallpaperFullScreen" parent="@android:style/Theme.Wallpaper.NoTitleBar.Fullscreen">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="TranslucentFullScreen" parent="android:Theme.Translucent.NoTitleBar.Fullscreen" >
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="BackgroundFullScreen" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowBackground">@drawable/screen</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
